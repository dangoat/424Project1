<!DOCTYPE html>
<html>
<head>
	<title>424 Map</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
</head>
<body>
	<div class="jumbotron bg-info">
		<h1>Publisher</h1> 
		<p>Post a message</p> 
	</div>
	<div class="container">
		<div class="row">
			<div class="col-sm">
				<h2>Post Story</h2>
				<form action="/postStory" method="POST">
					<div class="form-group">
						<label for="name">Name</label>
						<input class="form-control" type="number" name="name" min="0">
					</div>

					<div class="form-group">
						<label for="starttime">Start Time:</label>
						<input class="form-control" type="date" name="starttime">
					</div>

					<div class="form-group">
						<label for="endtime">End Time:</label>
						<input class="form-control" type="date" name="endtime">
					</div>

					<div class="form-group">
						<label for="location">Location:</label>
						<input class="form-control" type="text" name="location">
					</div>

					<div class="form-group">
						<label for="range">Range(miles):</label>
						<input class="form-control" type="number" name="range" min="0">
					</div>

					<div class="form-group">
						<label for="category">Category:</label>
						<input class="form-control" type="text" name="category">
					</div>

					<div class="form-group">
						<label for="comment">Comment:</label>
						<textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
					</div>
					<div class="form-group">
						<input type="file" name="pic" accept="image/*">
					</div>
					<div class="form-group">
						<input class="btn btn-primary" type="submit" value="Publish">
					</div>
				</form>
			</div>
			<div class="col-sm">
				<h2>Add Category</h2>
				<form action="/addCategory" method="POST">
					<div class="form-group">
						<label for="categoryname">Name:</label>
						<input class="form-control" type="text" name="categoryname">
					</div>
					<div class="form-group">
						<label for="parentcategory">Parent Category:</label>
						<input class="form-control" type="text" name="parentcategory">
					</div>
					<div class="form-group">
						<input class="btn btn-primary" type="submit" value="Add">
					</div>
				</form>
				<h2>Search Stories</h2>
				<form action="/searchStories" method="POST">
					<div class="form-group">
						<label for="phrase">Category:</label>
						<input class="form-control" type="text" name="category">
					</div>
					<div class="form-group">
						<label for="phrase">Latitude:</label>
						<input class="form-control" type="number" name="lat">
					</div>
					<div class="form-group">
						<label for="phrase">Longitude:</label>
						<input class="form-control" type="number" name="long">
					</div>
					<div class="form-group">
						<input class="btn btn-primary" type="submit" value="Search">
					</div>
				</form>

			</div>
			<div class="col-sm">
				<% if (typeof posts != 'undefined'){ %>
				<h2>Results:</h2>
				<ul class="list-group">
					<% posts.forEach((post) => { %>
						<li class="list-group-item" style="display: block">
							<div><h4><%= post.name %></h4></div>
							<p>Category: <%= post.category %></p> <br>
							<img src="pic_trulli.jpg" alt="No Image"> <br>
							<p><%= post.description %></p>
						</li>
					<% }) %>
				</ul>
				<% } %>
			</div>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
	<script src="app.js"></script>
</body>
</html>